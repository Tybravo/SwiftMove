{
  "compilerOptions": {
    /* Output settings */
    "target": "ES2020",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",

    /* TypeScript strictness */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    /* Debugging */
    "sourceMap": true,

    /* For Node.js types */
    "types": ["node"],

    /* Additional safety checks */
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
